          = link_to "Private Styling", private_styling_path
          .highlight
        %li.costume_design
          = link_to "Costume Design", costume_design_path
          .highlight
        %li.blog
          = link_to "Blog", blog_path
          .highlight
        %li.about
          = link_to "About", about_path
          .highlight
        %li.contact
          = link_to "Contact", contact_path
          .highlight

